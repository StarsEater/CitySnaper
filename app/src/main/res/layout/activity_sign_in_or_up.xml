<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Activity.SignInOrUp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_in_up_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/good_morning_img" />

    </FrameLayout>
    <ImageView
        android:id="@+id/sign_up_in_back"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="4dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"/>
    <TextView
        android:id="@+id/changeState"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注 册"
        android:textSize="16dp"
        android:textColor="@color/white50"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless"/>





    <LinearLayout
        android:id="@+id/sign_in_up_lly"
        android:layout_below="@id/sign_up_in_back"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sign_in_up_lly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/calibri"
        android:gravity="center"
        android:text="---------使用第三方账号注册或登录----------"
        android:textColor="#9affffff"
        android:textSize="10sp" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/wechat" />
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/zhifubao"
        android:layout_marginLeft="32dp"/>



    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
