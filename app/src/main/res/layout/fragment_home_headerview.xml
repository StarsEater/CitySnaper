<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_home_headerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:layout_gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/city_choose"
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="@dimen/height_in_home_image" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tourism_strategy"
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="@dimen/height_in_home_image"
                android:layout_marginLeft="@dimen/height_in_home_image_left"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tourism_helper"
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="@dimen/height_in_home_image"
                android:layout_marginLeft="@dimen/height_in_home_image_left"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/business_travel_services"
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="@dimen/height_in_home_image"
                android:layout_marginLeft="@dimen/height_in_home_image_left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="26dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="16dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="城市选择"/>
            <TextView
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="16dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_in_home_image_left"
                android:textColor="@color/colorPrimaryDark"
                android:text="旅行攻略"/>
            <TextView
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="16dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_in_home_image_left"
                android:textColor="@color/colorPrimaryDark"
                android:text="旅行助手"/>
            <TextView
                android:layout_width="@dimen/height_in_home_image"
                android:layout_height="16dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_in_home_image_left"
                android:textColor="@color/colorPrimaryDark"
                android:text="商旅服务"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider"/>
</LinearLayout>