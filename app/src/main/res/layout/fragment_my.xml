<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">
    <android.support.design.widget.CoordinatorLayout
        app:layout_constraintTop_toTopOf="@+id/parent"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_person_add_black_24dp"/>
                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toda"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:paddingRight="6dp"
                    android:layout_width="38dp"
                    android:layout_height="28dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_settings_black_24dp"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
           >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:paddingTop="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/height_in_my_image"
                android:layout_height="@dimen/height_in_my_image" />
            <LinearLayout
                android:id="@+id/my_ly"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/post_num"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="1"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/fans_num"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="1"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/concern_num"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
    </LinearLayout>
            <Button
                android:id="@+id/my_edit"
                android:layout_alignLeft="@+id/my_ly"
                android:layout_alignRight="@+id/my_ly"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/my_ly"
                android:gravity="center"
                android:textSize="12sp"
                android:text="@string/my_edit"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/my_edit_shape"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
        </RelativeLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider"/>
        </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>